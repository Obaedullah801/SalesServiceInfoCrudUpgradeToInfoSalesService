        @*Create A Popup Modal With Registration Form For Add Or Edit Student Record*@

        <div class="modal fade" id="MyModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4 id="ModalTitle"></h4>
                    </div>
                    <div class="modal-body">
                        <form id="form">
                            <fieldset id="SubmitForm">
                                @Html.HiddenFor(m => m.StudentId, new { @id = "StuId" })
                                <div class="form-group col-md-6">
                                    @Html.TextBoxFor(m => m.StudentName, new { @id = "StuName", @class = "form-control", @placeholder = "Student Name*" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.TextBoxFor(m => m.Email, new { @id = "Email", @class = "form-control", @placeholder = "StudentInfo*" })
                                </div>
